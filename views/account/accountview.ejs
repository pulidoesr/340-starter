<div id="accountview-container" class="accountview-container">
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } %>
  <!-- ✅ Display Flash Messages -->
  <div id="flash-message" class="flash-message">
    <%- messages() %>
  </div>
<div id="accountview-box" class="accountview-box">
  <% if (accountData.account_type === "Client") { %>
    <h2>Client:  <%= accountData.account_firstname %></h2>
  <% } %>
  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <h2>Welcome <%= accountData.account_firstname %> - <%= accountData.account_type %> </h2>
    
<% } %>  
<!-- ✅ Update Account Information Link (Always Visible) -->
<% if (accountData) { %>
  <a href="/account/update/<%= accountData.account_id %>">Edit Account Information</a>
<% } %>

<!-- ✅ Show Inventory Management Section Only for Employees or Admins -->
<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
<% } %>
</div>
</div>
<!-- ✅ Dynamic Account View Content -->

