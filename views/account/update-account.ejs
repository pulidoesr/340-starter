<div id="accountview-container" class="accountview-container">

    <!-- âœ… Display Flash Messages -->
    <div id="flash-message" class="flash-message">
      <%- messages() %>
    </div>
<div class="accountform-container">
<h1>Update Account Information</h1>

<form action="/account/update/<%= accountData.account_id %>" method="POST">
    <label for="account_firstname">First Name:</label>
    <input type="text" name="account_firstname" value="<%= accountData.account_firstname %>" required>

    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" value="<%= accountData.account_lastname %>" required>

    <label for="account_email">Email:</label>
    <input type="email" name="account_email" value="<%= accountData.account_email %>" required>

    <button type="submit">Update Account</button>
</form>
<div class="password-change-link">
    <p>Want to change your password? <a href="/account/change-password">Click here</a></p>
</div>
</div>
</div>