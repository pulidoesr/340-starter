<div id="salecar-container" class="salecar-container">
    <% if (title) { %>
        <h1><%= title %></h1>
      <% } %>

    <!-- âœ… Display Flash Messages -->
    <div id="flash-message" class="flash-message">
        <%- messages() %>
      </div>
 
      <label for="client">Client:</label>
      <select id="client" name="client">
        <option value="">Select a Client</option>
        <% clients.forEach(client => { %>
            <option value="<%= client.account_id %>" <%= client.account_id == selectedClient ? "selected" : "" %>>
                <%= client.account_firstname + " " + client.account_lastname %>
            </option>
        <% }) %>
    </select>
    <label for="classification">Classification:</label>
    <select id="classification" name="classification" onchange="fetchCars()">
        <option value="">Select a Classification</option>
        <% classifications.forEach(classification => { %>
            <option value="<%= classification.classification_id %>" 
                <%= classification.classification_id == selectedClassification ? "selected" : "" %>>
                <%= classification.classification_name %>
            </option>
        <% }) %>
      </select>
      <label for="carclassification">Car by Classification:</label>
      <select id="car" onchange="updateCarDetails()"></select>
        <option value="">Car selection</option>
        <% cars.forEach(cars => { %>
            <option value="<%= classification.classification_id %>" 
                <%= classification.classification_id == selectedClassification ? "selected" : "" %>>
                <%= classification.classification_name %>
            </option>
        <% }) %>
      </select>


<img id="carImage" src="" alt="Car Image" width="200">

<label>Price:</label> <input id="price" readonly>
<label>Miles:</label> <input id="miles" readonly>
<label>Color:</label> <input id="color" readonly>

<label>Tax Rate (%):</label> <input id="taxRate" oninput="calculateTotal()">
<label>Tax Amount:</label> <input id="taxAmount" readonly>
<label>Total Price:</label> <input id="totalPrice" readonly>

<div class="button-group">
<button onclick="processSale()">Invoice</button>
<button onclick="window.location.reload()">Cancel</button>
<button onclick="window.location.href='/account/accountview'">Exit</button>
</div>
</div>
<script src="../../js/sale.js"></script>